{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/main.cpp",
                "src/database.cpp",
                "src/user.cpp",
                "src/period.cpp",
                "src/expense.cpp",
                "src/menu.cpp",
                "-o",
                "MealManagementSystem",
                "-lmysqlcppconn",
                "-lssl",
                "-lcrypto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        }
    ]
}